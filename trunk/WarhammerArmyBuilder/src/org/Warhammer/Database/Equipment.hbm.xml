<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.Warhammer.Warhammer.Equipment" table="EQUIPMENT">
    <id name="equipmentID" type="integer">
      <generator class="increment"/>
    </id>
    <property column="COST" name="cost"/>
    <property column="NAME" name="name" length="30"/>
    <property column="RANGE" name="range" type="integer"/>
    <property column="MODIFIER" name="modifier" length="50"/>
    <property column="USABLEBY" name="usableBy" length="50"/>
    <property column="ITEMTYPE" name="itemType" length="20">
      <type name="jcolibri.connector.databaseutils.EnumUserType">
        <param name="enumClassName">org.Warhammer.Warhammer.Equipment$itemType</param>
      </type>
    </property>
    <set lazy="false" name="rules" table="Equipment_rules">
      <key column="equipmentID"/>
      <many-to-many class="org.Warhammer.Warhammer.SpecialRules" column="ID"/>
    </set>

  </class>
</hibernate-mapping>
