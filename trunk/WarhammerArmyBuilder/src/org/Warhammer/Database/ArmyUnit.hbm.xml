<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.Warhammer.Warhammer.ArmyUnit" table="ARMY_UNIT">
    <id name="ID" type="integer">
      <generator class="increment"/>
    </id>
    <property column="ARMY_ID" name="armyID" type="integer"/>
    <property column="UNIT_NAME" name="unitName">           
        </property>
    <set name="equipment" table="ARMY_UNIT_EQUIPMENT">
      <key column="ARMY_UNIT_ID"/>
      <many-to-many class="org.Warhammer.Warhammer.Equipment" column="EQUIPMENT_ID"/>
    </set>
    <set name="utility" table="ARMY_UNIT_UTILITY">
      <key column="ARMY_UNIT_ID"/>
      <many-to-many class="org.Warhammer.Warhammer.UtilityUnit" column="UTILITY_ID"/>
    </set>
  </class>
</hibernate-mapping>
