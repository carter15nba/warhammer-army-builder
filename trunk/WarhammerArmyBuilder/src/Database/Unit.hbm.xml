<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <joined-subclass extends="Warhammer.CoreCase" name="Warhammer.Unit" table="UNIT">
    <key column="ID"/>
    <property column="ARMYTYPE" name="armyType" type="String"/>
    <property column="ATTACK" name="attack" type="String"/>
    <property column="BALLISTICSKILL" name="ballisticSkill" type="String"/>
    <property column="INITIATIVE" name="initiative" type="String"/>
    <property column="LEADERSHIP" name="leadership" type="String"/>
    <property column="MOVEMENT" name="movement" type="String"/>
    <property column="STRENGTH" name="strength" type="String"/>
    <property column="TOUGHNESS" name="toughness" type="String"/>
    <property column="UNITTYPE" name="unitType" type="String"/>
    <property column="WEAPONSKILL" name="weaponSkill" type="String"/>
    <property column="WOUNDS" name="wounds" type="String"/>
    <set lazy="false" name="equipment" table="UNITEQUIPMENT">
      <key column="ID"/>
      <many-to-many class="Warhammer.Equipment" column="EQUIPMENTID"/>
    </set>
    <set lazy="false" name="utilityUnit" table="UNITUTILITY">
        <key column="ID"/>
        <many-to-many column="ID" class="Warhammer.CrewMount"/>
    </set>
  </joined-subclass>
</hibernate-mapping>
