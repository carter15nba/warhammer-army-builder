<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="Warhammer.Case" table="CASES">
    <id name="caseID" type="integer">
      <generator class="increment"/>
    </id>
    <property column="ARMYPOINTS" name="armyPoints"/>
    <property column="OPPONENTRACE" name="opponentRace"/>
    <property column="OUTCOME" name="outcome"/>
    <property column="PLAYERRACE" name="playerRace"/>
    <set lazy="false" name="units" table="CASEUNITS">
      <key column="caseID"/>
      <many-to-many class="Warhammer.Unit" column="unitID"/>
    </set>
  </class>
</hibernate-mapping>
