<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="Warhammer.Case" table="CASES">
    <id name="caseID" type="integer">
      <generator class="increment"/>
    </id>
    <property column="ARMYPOINTS" name="armyPoints" type="integer"/>
    <property column="OPPONENTRACE" name="opponentRace" type="string"/>
    <property column="OUTCOME" name="outcome" type="string"/>
    <property column="PLAYERRACE" name="playerRace" type="string"/>
    <set name="units" table="CASEUNITS" lazy="false" >
        <key column="caseID"/>
        <many-to-many column="unitID" class="Warhammer.Unit"/>
    </set>
  </class>
</hibernate-mapping>
