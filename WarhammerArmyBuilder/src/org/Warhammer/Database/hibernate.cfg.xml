<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!--
    Document   : hibernate.cfg.xml
    Created on : 24. januar 2011, 10:50
    Author     : Glenn Rune StrandbrÃ¥ten
    Description:
        This file contains all the hiberate configuration data including:
        database name, driver, username and password. Additional setup info is
        also present. Finally is the location of all the .cfg.xml mapping files
        contained in this file (except the ones allready defined in the
        databaseconfig.xml file to prevent dual mapping).
-->
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.EmbeddedDriver</property>
    <property name="hibernate.connection.url">jdbc:derby:warhammerDB;create=true</property>
    <property name="hibernate.connection.username">gamer</property>
    <property name="hibernate.connection.password">8844Qgpty</property>
    <property name="connection.pool_size">1</property>
    <property name="current_session_context_class">thread</property>
    <property name="dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="show_sql">false</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping resource="org/Warhammer/Database/Unit.hbm.xml"/>
    <mapping resource="org/Warhammer/Database/Equipment.hbm.xml"/>
    <mapping resource="org/Warhammer/Database/UtilityUnit.hbm.xml"/>
    <mapping resource="org/Warhammer/Database/SpecialRules.hbm.xml"/>
    <mapping resource="org/Warhammer/Database/Army.hbm.xml"/>
    <mapping resource="org/Warhammer/Database/ArmyUnit.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
