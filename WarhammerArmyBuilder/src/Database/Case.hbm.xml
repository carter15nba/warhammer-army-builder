<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="Warhammer.Case" table="CASES">
    <id name="ID" type="integer">
        <generator class="increment"/>
    </id>
    <property name="armyPoints" column="ARMYPOINTS" type="integer"/>
    <property name="opponentRace" column="OPPONENTRACE" type="string"/>
    <property name="outcome" column="OUTCOME" type="string"/>
    <property name="playerRace" column="PLAYERRACE" type="string"/>
    <set name="units" table="CASEUNITS">
        <key column=""/>
        <many-to-many column="caseID" class="Warhammer.UnitCase"/>
        <!-- TODO: Map caseunit.unitnumber to set map, related to the units set map -->
    </set>
  </class>
</hibernate-mapping>
